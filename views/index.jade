extends layout

block content
  form.search
    h5 Where would you like to go?
    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.textfield-demo
      input#search_query.mdl-textfield__input(type='text')
      label.mdl-textfield__label(for='search_query') Enter your destination
    button#search_btn.mdl-button.mdl-js-button.mdl-button--raised.mdl-button--accent.mdl-js-ripple-effect Go!
